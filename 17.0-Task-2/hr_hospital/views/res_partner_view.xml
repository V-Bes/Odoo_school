<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.odoo.school.library.form ()</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="replace"/>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_ods_author"/>
            </xpath>

            <field name="email" position="attributes">
                <attribute name="readonly">1</attribute>
            </field>
        </field>
    </record>

            <record id="action_hr_hospital_partner_window" model="ir.actions.act_window">
            <field name="name">partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">form</field>
        </record>

    <menuitem id="hr_hospital_menu_partner"
                  action="action_hr_hospital_partner_window"
                  parent="hr_hospital_menu_catalog"
                  name="Partner" sequence="400"/>
</odoo>